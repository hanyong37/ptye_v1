<table>
  <thead>
    <tr>
      <th>产品名</th>
      <th>价格</th>
      <th>描述</th>
      <th>分类</th>
      <th>单位</th>
      <th>版本</th>
      <th>New？</th>
      <th>Hot？</th>
      <th colspan="2">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @version.products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.catagory.name %></td>
        <td><%= product.unit %></td>
        <td><%= product.version.id %></td>
        <td><%= product.isNew %></td>
        <td><%= product.isHot %></td>
        <td><%= link_to '编辑', edit_product_path(product) if product.version.status==0   %></td>
        <td><%= link_to '删除', product, method: :delete, data: { confirm: 'Are you sure?' }if product.version.status==0 %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
<%= link_to '新建产品', new_product_path  %>
</p>


