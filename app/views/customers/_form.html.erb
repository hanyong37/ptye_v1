<%= form_for(@customer,html: {class: 'form-horizontal'}) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label "名字"  , class: 'col-xs-2 control-label'%>
    <div class="col-xs-10">
      <%= f.text_field :name,class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label "昵称" , class: 'col-xs-2 control-label'%>
    <div class="col-xs-10">
      <%= f.text_field :nick_name,class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label "微信号", class: 'col-xs-2 control-label' %>
    <div class="col-xs-10">
      <%= f.text_field :weixin_id,class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label "手机号", class: 'col-xs-2 control-label' %>
    <div class="col-xs-10">
      <%= f.text_field :mobile_number,class: 'form-control' %>
    </div>
  </div>
  <% if @customer.id != nil %>
    <div class="field form-group">
      <%= f.label "是否会员", class: 'col-xs-2 control-label' %>
      <div class="col-xs-10">
        <%= f.text_field :is_member,readonly:true,class: 'form-control'%>
      </div>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label "备注", class: 'col-xs-2 control-label' %>
    <div class="col-xs-10">
      <%= f.text_field  :description,class: 'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
