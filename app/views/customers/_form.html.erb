    <%= f.text_field :nick_name %>
  </div>
  <div class="field">
    <%= f.label "微信号" %><br>
    <%= f.text_field :weixin_id %>
  </div>
  <div class="field">
    <%= f.label "手机号" %><br>
    <%= f.text_field :mobile_number %>
  </div>
  <div class="field">
    <%= f.label "是否会员" %><br>
    <%= f.radio_button:is_member , 'true'%><label>true</label>
