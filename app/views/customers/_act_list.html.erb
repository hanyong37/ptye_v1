<table>
  <thead>
    <tr>
      <th>名字</th>
      <th>日期</th>
      <th>活动类型</th>
      <th>活动描述</th>
      <th>金额</th>
      <th>备注</th>
      <th>相关产品</th>
      <th>产品单价</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @customer.user_activities.each do |user_activity|  %>
      <tr>
        <td><%= user_activity.customer.name %></td>
        <td><%= user_activity.act_date %></td>
        <td><%= user_activity.type_name %></td>
        <td><%= user_activity.item_desc %></td>
        <td><%= user_activity.discount %></td>
        <td><%= user_activity.amount %></td>
        <td><%= user_activity.comments %></td>
        <td><%= user_activity.product.name if user_activity.act_type != 0 %></td>
        <td><%= user_activity.product.price if user_activity.act_type != 0  %></td>
        <td><%= link_to '查看Show', user_activity %></td>
        <td><%= link_to '编辑Edit', edit_user_activity_path(user_activity) %></td>
        <td><%= link_to '删除Destroy', user_activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
   <% end%>
  </tbody>
</table>
